{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
      "source": "**/!(*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg)",
      "destination": "/index.html"
      },
      {
        "source": "**/!(service-worker.js)",
        "destination": "/service-worker.js"
      }
    ]
  },
  "functions": {
    "source": "functions-dist",
    "predeploy": [
      "npm run functions-clean && npm run functions-build && npm run functions-copy"
    ]
  }
}
